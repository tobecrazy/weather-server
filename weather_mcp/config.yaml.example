# OpenWeatherMap API Configuration
# Get your API key from: https://home.openweathermap.org/api_keys
apikey: your api key

# Server transport mode
# Options:
#   - stdio: Standard input/output mode (default, good for CLI usage)
#   - sse: HTTP server mode with streaming support (recommended for web clients)
#   - streamable-http: Alias for sse mode (for backward compatibility)
mode: sse
port: 3399

# Default city to use when no city is specified in requests
# Format: City name, optionally with country code (e.g., "London,uk")
default_city: Beijing,cn

# Authentication settings
auth:
  # Enable or disable authentication
  enabled: true
  
  # Secret key used to sign and validate tokens
  # For production, use a strong random key
  secret_key: Bearer eyJpYXQiOiAxNzQ5OTE1NDMwLCAianRpIjogIjIxNWJlZGM0ZGMxNDRkZDg3N2EwOWY0YTkzYjlhN2E4IiwgImV4cCI6IDE3NTAwMDE4MzB9.8_FauQi0pTh57rPjMAly8AtE92j2AgcyQI_MuhvQqqM
  
