# Example environment variables for Weather MCP Server
# Copy this file to .env and modify as needed

# OpenWeatherMap API Key
OPENWEATHERMAP_API_KEY=your_api_key_here

# Server transport mode (stdio or sse)
MCP_TRANSPORT_MODE=stdio

# Default city (used when no city is specified in requests)
DEFAULT_CITY=Beijing,cn

# HTTP server settings (only used when MCP_TRANSPORT_MODE=sse or streamable-http)
HTTP_HOST=127.0.0.1
HTTP_PORT=8000

# Legacy SSE settings (maintained for backward compatibility)
SSE_HOST=127.0.0.1
SSE_PORT=8000

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
