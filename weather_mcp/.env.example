# Example environment variables for Weather MCP Server
# Copy this file to .env and modify as needed

# OpenWeatherMap API Key
OPENWEATHERMAP_API_KEY=your_api_key_here

# Server transport mode (stdio or sse)
MCP_TRANSPORT_MODE=sse

# Default city (used when no city is specified in requests)
DEFAULT_CITY=Beijing,cn

# HTTP server settings (only used when MCP_TRANSPORT_MODE=sse)
HTTP_HOST=127.0.0.1
HTTP_PORT=3399

# Legacy SSE settings (maintained for backward compatibility)
SSE_HOST=127.0.0.1
SSE_PORT=3399

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Authentication settings
AUTH_ENABLED=true
AUTH_SECRET_KEY=your_secret_key_here
AUTH_TOKEN_EXPIRY=86400  # 24 hours in seconds
